{
    "type": "card",
    "fields": [
        {
            "type": "fieldset",
            "fields": [
                {
                    "type": "label",
                    "value": "{value.name}"
                },
                {
                    "type": "html",
                    "value": "{value.description}"
                },
                {
                    "type": "media",
                    "value": "{value.attributes.media}"
                }
            ]
        },
        {
            "type": "buttonset",
            "align": "right",
            "style": "horizontal-align:right; orientation:horizontal;",
            "className": "marker-card-menu",
            "buttons": [
                {
                    "icon": "{shareIcon.0}?tint=rgb(100,100,100)"
                },
                {
                    "icon": "{likeIcon.0}?tint=rgb(100,100,100)"
                }
            ]
        }
    ]
}